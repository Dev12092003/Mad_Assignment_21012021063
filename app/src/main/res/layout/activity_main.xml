<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Conveter"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:id="@+id/lenghtbtn"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/brown"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Unit conversions between Length Unit"/>

            <ImageView
                android:layout_width="172dp"
                android:layout_height="100dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/length" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:id="@+id/weightbtnn"
            android:backgroundTint="@color/purple"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="15dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Unit conversions between Weight Unit"/>

            <ImageView
                android:layout_width="135dp"
                android:layout_height="90dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/weight" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="140dp"
            android:layout_height="290dp"
            android:id="@+id/volumebtn"
            android:backgroundTint="@color/red"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="15dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Unit conversions between Volume Unit"/>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/volume" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:id="@+id/speedbtn"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="370dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Unit conversions between Speed Unit"/>

            <ImageView
                android:layout_width="135dp"
                android:layout_height="90dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/speed" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:id="@+id/temperaturebtn"
        android:backgroundTint="@color/yellow"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="520dp"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Unit conversions between Temperature Unit"/>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/temperature" />

    </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>